<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/im_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:background="#212839">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Mode"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="50sp"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onBack"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="70sp"
            android:layout_marginRight="20sp"
            android:background="#212839"
            android:orientation="vertical"
            android:paddingLeft="5sp"
            android:paddingRight="5sp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="MOMENTARY MODE"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_fulsetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/cb_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="FULSE TIME"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="30sp"
                        android:layout_height="fill_parent"
                        android:background="@color/transparent"
                        android:onClick="onMinusFulseTime"
                        android:text="-"
                        android:textColor="#99FF66"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_fulseTime"
                        android:layout_width="90sp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="100MS"
                        android:textColor="#99FF66"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="30sp"
                        android:layout_height="fill_parent"
                        android:background="@color/transparent"
                        android:onClick="onPlusFulseTime"
                        android:text="+"
                        android:textColor="#99FF66"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1sp"
                android:alpha="0.5"
                android:background="@color/gray_text" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="MOMENTARY MODE"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_autoTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/cb_selector" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="FULSE TIME"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="30sp"
                        android:layout_height="fill_parent"
                        android:background="@color/transparent"
                        android:onClick="onMinusAutoTime"
                        android:text="-"
                        android:textColor="#99FF66"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_autoTime"
                        android:layout_width="90sp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="1S"
                        android:textColor="#99FF66"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="30sp"
                        android:layout_height="fill_parent"
                        android:background="@color/transparent"
                        android:onClick="onPlusAutoTime"
                        android:text="+"
                        android:textColor="#99FF66"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35sp"
        android:contentDescription="@string/alert_dialog_no"
        android:src="@drawable/im_logo" />

</RelativeLayout>